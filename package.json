{
  "name": "csv-explorer",
  "version": "0.2.0",
  "description": "Run SQL queries against CSV documents.",
  "main": "dist/app.js",
  "scripts": {
    "build:ts": "tsc",
    "build:css": "postcss --use tailwindcss --use autoprefixer -o dist/stylesheet.css src/**/*.css",
    "build:bundle": "esbuild out/index.js --minify --bundle --outfile=dist/app.js --target=chrome58,firefox57",
    "build:workers": "browserify out/workers/database.js -o dist/workers/database.js",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test": "npm run cypress:run"
  },
  "author": "Albert Sadowski <asadowski@mailbox.org>",
  "license": "MIT",
  "dependencies": {
    "@dumpstate/ixdb-kv-store": "^0.2.0",
    "@dumpstate/web-worker-proxy": "^0.1.7",
    "@uiw/react-textarea-code-editor": "^2.0.3",
    "csv-parse": "^5.3.0",
    "csv-stringify": "^6.2.0",
    "jspreadsheet-ce": "^4.11.1",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sql.js": "^1.7.0"
  },
  "devDependencies": {
    "@monaco-editor/react": "^4.5.1",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "@types/sql.js": "^1.4.3",
    "autoprefixer": "^10.4.7",
    "browserify": "^17.0.0",
    "cypress": "^10.6.0",
    "esbuild": "^0.14.49",
    "http-serve": "^1.0.1",
    "postcss": "^8.4.14",
    "postcss-cli": "^10.0.0",
    "tailwindcss": "^3.1.6",
    "typescript": "^4.7.4",
    "wait-on": "^6.0.1"
  }
}
